# Tencent Cloud API credentials
# Get from: https://console.cloud.tencent.com/cam/capi
TENCENT_SECRET_ID=your_tencent_secret_id
TENCENT_SECRET_KEY=your_tencent_secret_key
TENCENT_REGION=ap-beijing
TENCENT_ENDPOINT=trtc.tencentcloudapi.com

# TRTC configuration
# Get from: https://console.cloud.tencent.com/trtc/app
TRTC_SDK_APP_ID=1234567890
TRTC_SECRET_KEY=your_trtc_secret_key

# LLM configuration (OpenAI example)
# Get from your LLM service provider
LLM_API_KEY=your_openai_api_key
LLM_API_URL=https://api.openai.com/v1
LLM_MODEL=gpt-3.5-turbo

# TTS configuration (Minimax example)
# Get from Minimax consoleï¼šhttps://platform.minimaxi.com/document/T2A%20V2
MINIMAX_TTS_GROUP_ID=your_minimax_group_id
MINIMAX_TTS_API_KEY=your_minimax_api_key
MINIMAX_TTS_VOICE_TYPE=your_minimax_voice_type

# TTS configuration (Tencent Cloud alternate option)
# AppId: https://console.cloud.tencent.com/tts
# SecretId/Key: https://console.cloud.tencent.com/cam/capi

